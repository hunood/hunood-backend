{
  "name": "hunood-backend",
  "version": "1.0.0",
  "description": "Projeto backend do sistema de gerenciamento de estabelecimentos gastron√¥micos Hunood",
  "main": "server.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "rm -rf dist/ & npm run db & npm run build & node dist/server.js",
    "build": "tsc --outDir dist/",
    "dev": "tsnd --transpile-only --respawn --ignore-watch node_modules src/server.ts",
    "db": "rm -rf dist/config.database.js & tsc src/config.database.ts --outDir dist/ & sequelize db:create & sequelize db:migrate"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "express": "^4.17.1",
    "i18next": "^19.8.4",
    "nodemailer": "^6.4.17",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.3.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.22",
    "@types/nodemailer": "^6.4.0",
    "@types/sequelize": "^4.28.9",
    "@types/validator": "^13.1.3",
    "dotenv": "^8.2.0",
    "sequelize-cli": "^6.2.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  }
}
